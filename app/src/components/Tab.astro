---
const { link, title, svg } = Astro.props;
import { siteConfig } from "../config/site";
---

<button onclick={`window.location.href='${link}';`} class=`w-full inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 hover:bg-primary/90 h-10 px-4 py-2 bg-[${siteConfig.theme.tab.background}] text-${siteConfig.theme.tab.text}`>
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="1"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="mr-2 h-5 w-5"
    >
      <path d=`${svg}`></path>
    </svg>
    {title}
  </button>
